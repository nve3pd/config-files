{
  "suggest.keepCompleteopt": true,
  "suggest.noselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "languageserver": {
   "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh",
        "bash"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "snippets.ultisnips.directories": [
    "UltiSnips"
  ]
}
